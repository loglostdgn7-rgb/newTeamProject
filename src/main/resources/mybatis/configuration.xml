<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <!-- 언더스코어를 camelCase로 매핑 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <!-- null 처리 방법 -->
        <setting name="jdbcTypeForNull" value="NULL"/>
    </settings>

    <typeAliases>
        <typeAlias type="team.project.dto.UserDTO" alias="UserDTO"/>
        <typeAlias type="team.project.dto.SnsUserDTO" alias="SnsUserDTO"/>
        <typeAlias type="team.project.dto.ProductDTO" alias="ProductDTO"/>
        <typeAlias type="team.project.dto.ProductDetailDTO" alias="ProductDetailDTO"/>
        <typeAlias type="team.project.dto.PagenationDTO" alias="PagenationDTO"/>
        <typeAlias type="team.project.dto.OrderDTO" alias="OrderDTO"/>
        <typeAlias type="team.project.dto.OrderDetailDTO" alias="OrderDetailDTO"/>
        <typeAlias type="team.project.dto.CategoryDTO" alias="CategoryDTO"/>
        <typeAlias type="team.project.dto.ReviewDTO" alias="ReviewDTO"/>
    </typeAliases>
</configuration>
